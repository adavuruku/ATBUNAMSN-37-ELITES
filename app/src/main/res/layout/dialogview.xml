<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fairwhite"
    android:id="@+id/lay">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fairwhite">
        <ImageView android:layout_height="250dp"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/atbu_admin"
            android:id="@+id/diaprofile_pic"
            android:contentDescription="Profile Pics" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:id="@+id/txtUser"
            android:textSize="15sp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:background="#59696969"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            />
    </RelativeLayout>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fairwhite"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/btnPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:background="@color/fairwhite"
            android:padding="5dp"
            android:src="@drawable/ic_key_two" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/fairwhite"
            android:padding="5dp"
            android:src="@drawable/ic_alluser"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnEditQoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/fairwhite"
            android:padding="5dp"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btnPics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@color/fairwhite"
            android:padding="5dp"
            android:src="@drawable/ic_menu_camera_use" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>



</LinearLayout>