<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.atbunamsn.homeView">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:contentPaddingBottom="3dp"
            card_view:contentPaddingTop="3dp"
            card_view:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@android:color/white">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
            >

                <TextView
                    android:id="@+id/phoneitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    android:text="New Text"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/msgbut"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_toLeftOf="@+id/phonebut"
                    android:layout_toStartOf="@+id/phonebut"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitXY"
                    android:src="@drawable/msg" />

                <ImageButton
                    android:id="@+id/phonebut"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone" />



            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>